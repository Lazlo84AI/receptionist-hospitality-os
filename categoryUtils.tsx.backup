import { AlertTriangle, Heart, Clock, Wrench, LucideIcon } from 'lucide-react';\nimport { cn } from '@/lib/utils';\n\ninterface CategoryConfig {\n  icon: LucideIcon;\n  iconClass: string;\n  badgeClass: string;\n  label: string;\n}\n\nexport const getCategoryConfig = (type: string): CategoryConfig => {\n  switch (type) {\n    case 'incident':\n      return {\n        icon: AlertTriangle,\n        iconClass: 'category-icon-incident',\n        badgeClass: 'type-badge',\n        label: 'Incident'\n      };\n    case 'client_request':\n      return {\n        icon: Heart,\n        iconClass: 'category-icon-client-request',\n        badgeClass: 'type-badge',\n        label: 'Client Request'\n      };\n    case 'follow_up':\n      return {\n        icon: Clock,\n        iconClass: 'category-icon-follow-up',\n        badgeClass: 'type-badge',\n        label: 'Follow-up'\n      };\n    case 'internal_task':\n    case 'personal_task':\n      return {\n        icon: Wrench,\n        iconClass: 'category-icon-internal-task',\n        badgeClass: 'type-badge',\n        label: 'Internal Task'\n      };\n    default:\n      return {\n        icon: Wrench,\n        iconClass: 'category-icon-internal-task',\n        badgeClass: 'type-badge',\n        label: 'Task'\n      };\n  }\n};\n\ninterface CategoryIconProps {\n  type: string;\n  className?: string;\n  size?: 'sm' | 'md' | 'lg';\n}\n\nexport function CategoryIcon({ type, className, size = 'md' }: CategoryIconProps) {\n  const config = getCategoryConfig(type);\n  const IconComponent = config.icon;\n  \n  const sizeClasses = {\n    sm: 'w-6 h-6 p-1',\n    md: 'w-8 h-8 p-2',\n    lg: 'w-10 h-10 p-2.5'\n  };\n  \n  return (\n    <div className={cn(\n      'rounded-full flex items-center justify-center',\n      config.iconClass,\n      sizeClasses[size],\n      className\n    )}>\n      <IconComponent className={cn(\n        size === 'sm' ? 'h-4 w-4' : size === 'md' ? 'h-4 w-4' : 'h-5 w-5'\n      )} />\n    </div>\n  );\n}\n